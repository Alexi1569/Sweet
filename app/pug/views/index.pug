extends ../includes/_layout

block header
  - var isMainPage = true;
  include ../includes/_header

block main

  main.main
    section.banner#banner.active
      .banner__overlay
      .banner__slider.swiper-container#banner-slider
        .swiper-wrapper
          a(href="#").swiper-slide
            .banner__bg(style="background-image: url('./img/banner-img-1.jpg')")
            .container
              .banner__inner
                p.banner__title Лучшие пряники у нас
                p.banner__descr Для любого повода. Для родных и близких.
          a(href="#").swiper-slide
            .banner__bg(style="background-image: url('./img/banner-img-2.jpg')")
            .container
              .banner__inner
                p.banner__title Название 2
                p.banner__descr Lorem ipsum dolor sit amet
          a(href="#").swiper-slide
            .banner__bg(style="background-image: url('./img/banner-img-1.jpg')")
            .container
              .banner__inner
                p.banner__title Название 2
                p.banner__descr Lorem ipsum dolor sit amet
        .swiper-pagination

    section.constructor.pt.pb(style="background-image: url(./img/constructor-bg.jpg)")
      .container
        p.caption Конструктор заказа
        .constructor__content.mt
          .constructor__col
            .constructor__col-title
              p Вид товара
              <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="constructor__line" viewBox="0 0 78.69 29.2"><path d="M13.61 5.58C13 2.33 8.22 2 5.44 3.76a11.57 11.57 0 0 0-3.19 15.56 16 16 0 0 0 4.56 4.27c7.65 5.08 17.53 6.18 26.49 4.14s17.05-7 23.92-13.08C63.72 8.87 70 1.64 78.63.5" stroke="#000" stroke-miterlimit="10" stroke-dasharray="4 5" fill="none"/></svg>
            .constructor__col-content
              .form__group-inputs
                .form__group.form__group--select
                  label.form__group-label Вид товара
                  .form__group-input
                    select
                      option(selected data-img="./img/constructor-view-img.png") Пряники
                      option(data-img="./img/constructor-box-img.png") Печеньки
                      option(data-img="./img/constructor-view-img.png") Сладости
              .constructor__col-img
                img(src="./img/constructor-view-img.png" alt="alt")
          .constructor__col
            .constructor__col-title
              p Оформление
              <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="constructor__line" viewBox="0 0 217.92 50.77"><path d="M.27 13C10.23 6.69 21 .17 32.77.51c8.49.25 16.46 4.1 23.57 8.74S70 19.39 77.39 23.57a69.49 69.49 0 0 0 33.22 9c4.85.06 9.82-.43 14.2-2.51s8.1-6 9-10.75a8.17 8.17 0 0 0-.12-3.87c-1.4-4.54-7.92-5.77-11.88-3.14s-5.63 7.66-6 12.4a20.27 20.27 0 0 0 1.3 9.55c2.62 6 8.94 9.57 15.06 12a53.8 53.8 0 0 0 12.89 3.69c9.68 1.31 19.57-1.34 28.29-5.73s16.47-10.5 24.14-16.54l20.12-15.87" stroke="#000" stroke-miterlimit="10" stroke-dasharray="4 5" fill="none"/></svg>
            .constructor__col-content
              .form__group-inputs
                .form__group.form__group--select
                  label.form__group-label Тематика
                  .form__group-input
                    select
                      option(selected disabled) Тематика
                      option Тематика 1
                      option Тематика 2
                .form__group.form__group--select
                  label.form__group-label Цвет
                  .form__group-input
                    select
                      option(selected disabled) Тематика
                      option Цвет 1
                      option Цвет 2
                .form__group.form__group--file
                  label.form__group-input
                    span Прикрепить фото или логотип
                    <svg><use xlink:href="#file-icon" /></svg>
                    input(type="file")
                .form__group.form__group--textarea
                  label.form__group-label(for="cs-t") Текст
                  .form__group-input
                    textarea(id="cs-t")
                  span.form__group-message Ошибка

          .constructor__col
            .constructor__col-title
              p Упаковка
              <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="constructor__line" viewBox="0 0 235.51 47.25"><path d="M.33 22.17c6.67-5.93 15-9.56 23.36-12.8 10.68-4.15 21.7-7.85 33.13-8.7s23.42 1.39 32.65 8.19c4.47 3.29 8.42 8.16 8.27 13.71s-6.28 10.78-11.26 8.33c-4.9-4.13-5-12.19-1.34-17.48s9.93-8.14 16.22-9.34c11.25-2.15 23.82.66 31.68 9 5.08 5.38 7.86 12.52 12.45 18.33C156 44.7 175.05 49.09 191.64 45.6s31-13.63 43.53-25.09" stroke="#000" stroke-miterlimit="10" stroke-dasharray="4 5" fill="none"/></svg>
            .constructor__col-content
              .form__group-inputs
                .form__group.form__group--select
                  label.form__group-label Вид упаковки
                  .form__group-input
                    select
                      option(selected data-img="./img/constructor-box-img.png") Коробочка
                      option(data-img="./img/constructor-view-img.png") Пакет
                      option(data-img="./img/constructor-box-img.png") Грузовик
              .constructor__col-img
                img(src="./img/constructor-box-img.png" alt="alt")

          .constructor__col
            .constructor__col-title
              p Контактные данные
              <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="constructor__line" viewBox="0 0 220.82 60.21"><path d="M.28 11.46c21-14 50.08-14.65 71.69-1.63 4.51 2.73 8.7 6 13.33 8.5a49.55 49.55 0 0 0 42.62 2c3.48-1.5 7.31-4.4 6.66-8.14a6.36 6.36 0 0 0-2.53-3.79c-4.67-3.6-12.06-1.93-15.69 2.71s-3.83 11.32-1.66 16.8 6.4 9.9 11 13.57a88.14 88.14 0 0 0 20.42 11.89c8.66 3.72 17.92 6.47 27.35 6.37 17.08-.17 32.56-9.45 47.08-18.44" stroke="#000" stroke-miterlimit="10" stroke-dasharray="4 5" fill="none"/></svg>
              <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="constructor__line" viewBox="0 0 31.04 26.95"><path d="M.41 20.16c5.13 7.09 16.56 8.45 23.2 2.75 3.62-3.1 5.67-7.69 6.58-12.37.46-2.4.62-5-.52-7.18S25.7-.23 23.53.9s-2.65 4.3-2.7 6.91" stroke="#000" stroke-miterlimit="10" stroke-dasharray="4 5" fill="none"/></svg>
            .constructor__col-content
              .form__group-inputs
                .form__group
                  label.form__group-label(for="cs-n") Имя
                  .form__group-input
                    input(type="text" class="only-text-input" id="cs-n")
                  span.form__group-message Ошибка
                .form__group
                  label.form__group-label(for="cs-p") Телефон
                  .form__group-input
                    input(type="tel" class="only-numbers-input" id="cs-p")
                  span.form__group-message Ошибка
                .form__group
                  label.form__group-label(for="cs-e") Email
                  .form__group-input
                    input(type="email" id="cs-e")
                  span.form__group-message Ошибка
                .form__group.form__group--textarea
                  label.form__group-label(for="cs-c") Комментарий
                  .form__group-input
                    textarea(id="cs-c")
                  span.form__group-message Ошибка

        button.btn.constructor__btn(data-text="Оформить заказ")
          span Оформить заказ

    section.top.pt.pb
      .container
        p.caption топ продаж
        .top__content.tabs
          ul.tabs__list
            li.active
              a(href="#all") Вся продукция
            li
              a(href="#gingerbreads") пряники
            li
              a(href="#cakes") торты
            li
              a(href="#desserts") десерты
            li
              a(href="#popcakes") кейк-попсы
            li
              a(href="#cupcakes") капкейки
            li
              a(href="#cookiess") печенье
            li
              a(href="#all") корпоративы

          .tabs__content
            .tabs__item#all.active
              .products
                .products__slider.swiper-container
                  .swiper-wrapper
                    .swiper-slide.product
                      .product__img
                        img(src="./img/product-img.jpg" alt="product")
                        span.product__label New
                      .product__info
                        p.product__title Пряники “Медвежонок”

